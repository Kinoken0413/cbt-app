<div class="work">
  <h2><%= @work.automatic_thought %></h2>
  <p>投稿日時: <%= @work.created_at.strftime('%Y年%-m月%-d日 %H時%M分') %></p>
  <p>Cognitive Distortion: <%= CognitiveDistortion.find(@work.cognitive_distortion_id).name %></p>
  <p>Rational Thought: <%= @work.rational_thought %></p>

  <ul class="more_list">
    <li>
      <%= link_to '編集', edit_work_path(@work.id) %>
    </li>
    <li>
      <%= link_to '削除', work_path(@work.id), data: { turbo_method: :delete } %>
    </li>
  </ul>
</div>