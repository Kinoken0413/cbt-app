<% if model.errors.any? %>
  <!-- エラーアラートのコンテナ -->
  <div class="error-alert">
    <!-- エラーメッセージのリスト -->
    <ul>
      <% model.errors.messages.each do |attribute, messages| %>
        <% messages.each do |message| %>
          <!-- 各エラーメッセージの表示 -->
          <li class='error-message'><%= "#{message}" %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
<% end %>
